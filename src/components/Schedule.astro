---
const events = [
    {
        number: "01",
        label: "Ceremony",
        title: "Ceremony & Vows",
        description:
            "Gather on the chapel lawn for an intimate ceremony beneath the olive trees. Ushers are ready to guide you to your seat.",
        details: [
            "Prelude music begins at 3:40 PM",
            "Rings & vows at golden hour",
            "Quiet shuttle service begins at 3:15 PM",
        ],
    },
    {
        number: "02",
        label: "Welcome",
        title: "Garden Cocktail Hour",
        description:
            "Sip seasonal cocktails, enjoy live jazz, and mingle beneath the café lights as we transition into the celebration.",
        details: [
            "Signature drink: Lavender Paloma",
            "String trio taking requests",
            "Canapés served throughout the garden",
        ],
    },
    {
        number: "03",
        label: "Dinner",
        title: "Candlelit Reception",
        description:
            "Savor a farm-to-table feast paired with curated wines while heartfelt toasts and stories fill the room.",
        details: [
            "Dinner call at 6:25 PM",
            "Toasts begin after the second course",
            "Dessert trio plated at 8:10 PM",
        ],
    },
    {
        number: "04",
        label: "Celebration",
        title: "First Dance & Party",
        description:
            "Kick off the dance floor with our first dance, then stay on your feet for live DJ sets, photo moments, and late-night bites.",
        details: [
            "First dance at 8:50 PM",
            "Dessert lounge opens at 9:30 PM",
            "Photo booth until 11:30 PM",
        ],
    },
    {
        number: "05",
        label: "Farewell",
        title: "Sparkler Send-Off",
        description:
            "Close the night with a sparkling farewell and a final toast to forever. Shuttles depart every 20 minutes.",
        details: [
            "Grab a sparkler by the garden gate",
            "Final toast at 11:55 PM",
            "Last shuttle leaves at 12:30 AM",
        ],
    },
];
---

<section
    style="
        background-color: var(--color-primary);
        color: var(--color-secondary);
    "
>
    <div class="mx-auto w-full max-w-6xl px-4 py-24 sm:px-6 lg:px-8">
        <div class="max-w-4xl">
            <p
                class="text-sm uppercase tracking-[0.35em]"
                style="color: var(--color-muted);"
            >
                Our Celebration
            </p>
            <h2
                class="mt-4 text-4xl font-semibold tracking-tight sm:text-5xl lg:text-6xl"
                style="color: var(--color-secondary);"
            >
                Wedding Day Schedule
            </h2>
            <p
                class="mt-6 text-lg"
                style="color: var(--color-secondary); opacity: 0.8;"
            >
                Follow along to savor every cherished moment with us—from vows
                to the last sparkling toast.
            </p>
        </div>

        <div class="mt-16 flex flex-col">
            {
                events.map((event) => (
                    <article
                        class="sticky top-0 z-10 border-t border-dashed py-12 backdrop-blur"
                        style="
                            border-color: var(--color-muted);
                            background: color-mix(in srgb, var(--color-primary) 95%, transparent);
                        "
                    >
                        <div class="grid gap-10 lg:grid-cols-5 lg:items-start lg:gap-0">
                            <span
                                class="text-5xl font-bold tracking-tight sm:text-6xl lg:text-7xl"
                                style="color: var(--color-secondary);"
                            >
                                {event.number}
                            </span>
                            <div
                                class="flex flex-col gap-10 lg:col-span-4 lg:pl-12 lg:border-l lg:border-dashed"
                                style="border-color: var(--color-muted);"
                            >
                                <div class="space-y-4">
                                    <p
                                        class="text-xs uppercase tracking-[0.35em]"
                                        style="color: var(--color-secondary); opacity: 0.6;"
                                    >
                                        {event.label}
                                    </p>
                                    <h3
                                        class="text-4xl font-semibold tracking-tight sm:text-5xl lg:text-6xl"
                                        style="color: var(--color-secondary);"
                                    >
                                        {event.title}
                                    </h3>
                                </div>
                                <p
                                    class="text-base sm:text-lg lg:text-xl max-w-2xl"
                                    style="color: var(--color-secondary); opacity: 0.9;"
                                >
                                    {event.description}
                                </p>
                                <ul
                                    class="space-y-3 text-sm sm:text-base"
                                    style="color: var(--color-secondary); opacity: 0.8;"
                                >
                                    {event.details.map((detail) => (
                                        <li class="flex items-start gap-3 leading-relaxed">
                                            <span
                                                class="mt-1 inline-block h-1.5 w-1.5 rounded-full"
                                                style="background: var(--color-accent); opacity: 0.5;"
                                            />
                                            <span>{detail}</span>
                                        </li>
                                    ))}
                                </ul>
                            </div>
                        </div>
                    </article>
                ))
            }
        </div>
    </div>
</section>
