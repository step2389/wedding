
---
import { getEventData } from "../data/eventData";

const { schedule } = getEventData();
const events = schedule.events ?? [];
---

<section
  id="schedule1"
  class="scroll-mt-[60px] py-12"
  style="
    background-color: var(--color-primary);
    color: var(--color-secondary);
  "
>
 <!-- Modifica in Schedule1.astro -->
<div 
  class="mx-auto max-w-2xl px-6 py-10 rounded-[2.5rem] shadow-xl backdrop-blur-md border"
  style="
    background-color: rgba(255, 255, 255, 0.4); 
    border-color: rgba(255, 255, 255, 0.3);
  "
>
  <div class="space-y-0">
    {events.map((event) => (
      <div class="flex flex-col items-center py-6 border-b border-dashed last:border-0" 
           style="border-color: var(--color-secondary); opacity: 0.8;">
        <h3 class="text-2xl sm:text-3xl font-light tracking-tight text-center" 
            style="color: var(--color-secondary);">
          {event.title}
        </h3>
      </div>
    ))}
  </div>
</div>
</section>