---
import { getEventData } from "../data/eventData";
import bgImage from '../assets/images/background.jpg';

const { schedule } = getEventData();
const events = schedule.events ?? [];
---

<section id="schedule1" class="font-montserrat py-24" style="background: linear-gradient(135deg, var(--color-watercolor) 10%, var(--color-primary) 30%);">
  <div class="mx-auto max-w-2xl px-6">
    <div class="space-y-0 text-center">
      {events.map((event) => (
        <div class="py-10 border-b border-dashed last:border-0" 
             style="border-color: var(--color-muted);">
          <h3 class="text-3xl font-light tracking-tight" style="color: var(--color-secondary);">
            {event.title}
          </h3>
        </div>
      ))}
    </div>
  </div>

  <div class="flex flex-col items-center gap-4 ">
      <a
        href="/location"
        class="inline-block px-10 py-4 rounded-full text-[10px] font-bold uppercase tracking-[0.2em] shadow-lg transition-all hover:scale-[1.02] active:scale-95 border border-black/20 "
        style="
          background-color: var(--color-primary);
          color: var(--color-secondary);
        "
      >
        Come arrivare alla location
      </a>
    </div>
</section>