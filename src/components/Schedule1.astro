---
// src/components/Schedule1.astro
import { getEventData } from "../data/eventData";

const { schedule } = getEventData();
const events = schedule.events ?? [];
---

<section id="schedule1"
     class="scroll-mt-[60px]"
    style="
        background-color: var(--color-primary);
        color: var(--color-secondary);
    "
>
    <div class="mx-auto w-full max-w-6xl px-4 pt-20 pb-20 sm:px-6 lg:px-8">
        <div class="flex flex-col">
            {
                events.map((event) => (
                    <article
                        class="sticky top-[60px] z-10 border-t border-dashed py-12 backdrop-blur first:border-t-0"
                        style="
                            border-color: var(--color-muted);
                            background: color-mix(in srgb, var(--color-primary) 95%, transparent);
                        "
                    >
                        <div class="flex flex-col items-center text-center">
                            <h3
                                class="text-3xl font-semibold tracking-tight sm:text-4xl lg:text-5xl"
                                style="color: var(--color-secondary);"
                            >
                                {event.title}
                            </h3>
                        </div>
                    </article>
                ))
            }
        </div>
    </div>
</section>