---
import { getEventData } from "../data/eventData";
import bgImage from '../assets/images/background.jpg';

const { schedule } = getEventData();
const events = schedule.events ?? [];
---

<section id="schedule1" class="py-24" style="background: linear-gradient(135deg, var(--color-watercolor) 0%, var(--color-primary) 70%);">
  <div class="mx-auto max-w-2xl px-6">
    <div class="space-y-0 text-center">
      {events.map((event) => (
        <div class="py-10 border-b border-dashed last:border-0" 
             style="border-color: var(--color-muted);">
          <h3 class="text-3xl font-light tracking-tight" style="color: var(--color-secondary);">
            {event.title}
          </h3>
        </div>
      ))}
    </div>
  </div>
</section>