---
import Card from "./Card.astro";
import { getEventData } from "../data/eventData";
import bgImage from '../assets/images/background.jpg';
const { cards = [] } = getEventData();
---

<section id="cards" style={`background-image: url(${bgImage.src}); background-size: cover; background-position: center; position: relative;`}
    class="hero relative overflow-hidden bg-[var(--color-primary) hero-with-bg-image]">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {
            cards.map((card) => (
                <a
                    href={card.href}
                    class="group block focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-offset-2"
                >
                    <Card
                        image={card.image}
                        imageAlt={card.imageAlt}
                        title={card.title}
                        description={card.description}
                    />
                </a>
            ))
        }
    </div>
</section>
